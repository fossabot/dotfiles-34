    key <AE04> {    [   4, dollar, F4                                   ]   };
    key <AE05> {    [   5, percent, F5                                  ]   };
    key <AE06> {    [   6, asciicircum, F6                              ]   };
    key <AE07> {    [   7, ampersand, F7                                ]   };
    key <AE08> {    [   8, asterisk, F8                                 ]   };
    key <AE09> {    [   9, parenleft, F9                                ]   };
    key <AE10> {    [   0, parenright, F10                              ]   };
    key <AE11> {    [   minus, underscore, F11                          ]   };
    key <AE12> {    [   equal, plus, F12                                ]   };

    key <AD01> {    [   q, Q                                            ]   };
    key <AD02> {    [   w, W                                            ]   };
    key <AD03> {    [   e, E, Return                                    ]   };
    key <AD04> {    [   r, R                                            ]   };
    key <AD05> {    [   t, T                                            ]   };
    key <AD06> {    [   y, Y, Home                                      ]   };
    key <AD07> {    [   u, U, Prior                                     ]   };
    key <AD08> {    [   i, I, Next                                      ]   };
    key <AD09> {    [   o, O, End                                       ]   };
    key <AD10> {    [   p, P, Print                                     ]   };
    key <AD11> {    [   bracketleft,  braceleft, XF86AudioLowerVolume   ]   };
    key <AD12> {    [   bracketright, braceright, XF86AudioRaiseVolume  ]   };

    key <AC01> {    [   a, A, Escape                                    ]   };
