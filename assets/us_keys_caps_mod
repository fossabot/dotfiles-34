    key <AB03> {    [   c, C                                            ]   };
    key <AB04> {    [   v, V                                            ]   };
    key <AB05> {    [   b, B, BackSpace                                 ]   };
    key <AB06> {    [   n, N, Insert                                    ]   };
    key <AB07> {    [   m, M, Delete                                    ]   };
    key <AB08> {    [   comma, less, XF86AudioPrev                      ]   };
    key <AB09> {    [   period, greater, XF86AudioNext                  ]   };
